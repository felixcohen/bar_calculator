= form_for @drink do |f|
  - if @drink.errors.any?
    #error_explanation
      %h2= "#{pluralize(@drink.errors.count, "error")} prohibited this drink from being saved:"
      %ul
        - @drink.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :cost
    = f.text_field :cost
  .actions
    = f.submit 'Save'
