= form_for @sale do |f|
  - if @sale.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sale.errors.count, "error")} prohibited this sale from being saved:"
      %ul
        - @sale.errors.full_messages.each do |msg|
          %li= msg
.eight.columns
  - @products.each do |product|
    = link_to product.name, '#', id: product.id, :class => "btn-lg full-width button sale"
  = link_to "Add Discount", new_discount_path, :class => "btn-lg full-width button discount"
