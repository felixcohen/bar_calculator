= form_for @sale do |f|
  - if @sale.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sale.errors.count, "error")} prohibited this sale from being saved:"
      %ul
        - @sale.errors.full_messages.each do |msg|
          %li= msg

  .form_row
    %label Drink:
    - @drinks.each do |drink|
      = button_to drink.name.humanize, :controller => "sales", :action => "create", :method => "post", drink_id: drink.id 

